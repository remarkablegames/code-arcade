    "@typescript-eslint/parser": "7.13.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "postcss": "8.4.38",
